<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.di_springtest.repository.UserRepository">
    <select id="findAll"
        resultType="User">
        SELECT user_id, user_name FROM user
    </select>
    <select id="findById"
        resultType="User"
        parameterType="String">
        select user_id, password, user_name FROM user where user_id = #{userId}
    </select>
    <insert id="insertUser"
            parameterType="User">
        insert into user values (#{userId}, #{password}, #{userName})
    </insert>
    <update id="updateUser"
            parameterType="User">
        update user
        SET password=#{password}
        where user_id = #{userId}
    </update>
    <delete id="deleteUser"
            parameterType="String">
        delete from user
        where user_id = #{userId}
    </delete>
</mapper>